export LD_LIBRARY_PATH="/depot/bsavoie/apps/openmpi_4_1_1/lib:$LD_LIBRARY_PATH"


# cd into the submission directory
cd /scratch/negishi/hsu205/classy-test/DFT/XSASRUDTFFBDDK

/depot/bsavoie/apps/orca_5_0_1_openmpi411/orca /scratch/negishi/hsu205/classy-test/DFT/XSASRUDTFFBDDK/XSASRUDTFFBDDK-OPT.in > /scratch/negishi/hsu205/classy-test/DFT/XSASRUDTFFBDDK/XSASRUDTFFBDDK-OPT.out 

